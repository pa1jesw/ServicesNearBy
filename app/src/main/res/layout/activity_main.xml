<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/wallet_holo_blue_light"
    android:hapticFeedbackEnabled="true"
    android:layout_height="match_parent"
    tools:context="com.pa1.servicesnearby.MainActivity">

    <CheckedTextView
        android:id="@+id/checkedTextView"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textStyle="italic"
        android:fontFamily="monospace"
        android:textColor="@color/colorPrimaryDark"
        android:text="Services Near By" />

    <EditText
        android:id="@+id/etLoaction"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkedTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:textStyle="bold"
        android:hint="Enter Your City"
        android:textColor="@color/colorAccent"
        android:inputType="textPersonName"
         />

    <Spinner
        android:id="@+id/spnServ"
        android:textSize="22dp"
        android:layout_width="200dp"
        android:textAlignment="inherit"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etLoaction"
        android:layout_centerHorizontal="true"
        android:entries="@array/services"
        android:layout_marginTop="33dp" />

    <Button
        android:id="@+id/btnFind"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spnServ"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:text="Find" />


</RelativeLayout>
